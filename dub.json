{
	"name": "dharl",
	"description": "A low feature pixel art editor.",
	"license": "Public Domain",
	"authors": [
		"knt.roh"
	],

	"targetType": "executable",
	"application": "src/dharl/dharl.d",
	"stringImportPaths": [
		"src",
		"src/res"
	],
	"dependencies": {
		"dwt": "~>1.0.1"
	},

	"preBuildCommands-windows-x86": [
		"rcc src/dharl.rc"
	],
	"lflags-windows-x86": [
		"/rc:dharl.res"
	],

	"preBuildCommands-windows-x86_64": [
		"rc src/dharl.rc"
	],
	"lflags-windows-x86_64": [
		"src/dharl.res",
	],
	"libs-linux": [
		"atk-1.0",
		"cairo",
		"dl",
		"fontconfig",
		"gdk-x11-2.0",
		"gdk_pixbuf-2.0",
		"glib-2.0",
		"gmodule-2.0",
		"gnomeui-2",
		"gnomevfs-2",
		"gobject-2.0",
		"gthread-2.0",
		"gtk-x11-2.0",
		"pango-1.0",
		"pangocairo-1.0",
		"X11",
		"Xcomposite",
		"Xcursor",
		"Xdamage",
		"Xext",
		"Xfixes",
		"Xi",
		"Xinerama",
		"Xrandr",
		"Xrender",
		"Xtst"
	],

	"buildTypes": {
		"gui": {
			"lflags-windows-x86": [
				"/exet:nt/su:windows:4.0"
			],
			"lflags-windows-x86_64": [
				"/SUBSYSTEM:Windows",
				"/ENTRY:mainCRTStartup"
			]
		},
		"release": {
			"lflags-windows-x86": [
				"/exet:nt/su:windows:4.0"
			],
			"lflags-windows-x86_64": [
				"/SUBSYSTEM:Windows",
				"/ENTRY:mainCRTStartup"
			]
		}
	}
}
