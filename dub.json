{
	"name": "dharl",
	"description": "A low feature pixel art editor.",
	"license": "Public Domain",
	"authors": [
		"knt.roh"
	],

	"targetType": "executable",
	"application": "src/dharl/dharl.d",
	"stringImportPaths": [
		"src",
		"src/res"
	],
	"dependencies": {
		"dwt": "~>1.0.1"
	},

	"preBuildCommands-windows-x86": [
		"rcc -32 src/dharl.rc"
	],
	"lflags-windows-x86": [
		"/rc:dharl.res"
	],

	"preBuildCommands-windows-x86_64": [
		"rc src/dharl.rc"
	],
	"lflags-windows-x86_64": [
		"src/dharl.res",
	],

	"buildTypes": {
		"gui": {
			"lflags-windows-x86": [
				"/exet:nt/su:windows:4.0"
			],
			"lflags-windows-x86_64": [
				"/SUBSYSTEM:Windows",
				"/ENTRY:mainCRTStartup"
			]
		},
		"release": {
			"lflags-windows-x86": [
				"/exet:nt/su:windows:4.0"
			],
			"lflags-windows-x86_64": [
				"/SUBSYSTEM:Windows",
				"/ENTRY:mainCRTStartup"
			]
		}
	}
}
